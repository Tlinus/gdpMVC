<form method="{% block method %}post{% endblock %}" action="{% block action %}{% endblock %}">
    <div class="col-sm-5">
        <h1>
            <button class="btn btn-danger" type="submit">Delete Projet</button>
            <button class="btn btn-primary" type="submit">Ok</button>
        </h1>
    </div>

    <div class="col-sm-6">
        <h1>Projet</h1>
    </div>

    <div class="col-sm-12">
        <h3>Titre du projet</h3>
    </div>

    {# le hidden input nom changable selon le type de user #}
    <input type="hidden" value="" name="{% block hidden %}{% endblock %}">

    <div class="form-group col-sm-12">
        <input class="form-control" type="text" name="projetNom" placeholder="Titre du projet">
    </div>

    <div class="col-sm-12">
        <h3>Cahier des Charges</h3>
    </div>
    <div class="form-group col-sm-12">
        <input class="form-control" type="file" name="cahierCharge">
    </div>

    <div class="col-sm-12">
        <h3>Deadline</h3>
    </div>
    <div class="form-group col-sm-12">
        <input class="form-control" type="datetime-local" name="deadline">
    </div>
</form>
