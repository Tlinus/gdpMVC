<form method="{% block method %}post{% endblock %}" action="{% block action %}{% endblock %}">
    <div class="modal-body">

        {# le hidden input nom changable selon le type de user #}
        <input type="hidden" value="{% block hiddenValue %}{% endblock %}" name="{% block hidden %}{% endblock %}">

        {% block miniTask %}

            {% for mainTask in session.Task  %}
                {% if session.TaskByID == mainTask.id %}
                    <div class="form-group">
                        <h4>Titre</h4>
                        <input class="form-control" type="text" name="mainTitle" placeholder="Titre de la tâche" value="{{ mainTask.intitule }}">
                    </div>
                    <div class="form-group">
                        <h4>Deadline</h4>
                        <input class="form-control deadline" type="text" name="mainDeadline" value="{{ mainTask.dead_line }}">
                    </div>
                    <div class="form-group">
                        <h4>Commentaire</h4>
                        <textarea class="form-control" name="mainComments" placeholder="Plus d'information sur la tâche">{{ mainTask.commentaire }}</textarea>
                    </div>
                    <hr>
                    <div class="form-group">
                        <h3>Sous-Tâche</h3>
                        Activer
                        <input type="checkbox" class="enabled">
                    </div>
                    <button class="btn btn-primary addMiniTask" id="addMiniTask">Ajout Sous-Tâche</button>
                {% endif %}
                {% for bridge in mainTask %}
                    {% for miniTask in bridge %}
                        {% if miniTask.sous_tache_id == session.TaskByID  %}
                            <div class="form-group">
                                <h4>Titre</h4>
                                <input class="form-control disabled" disabled="disabled" type="text" name="title1" placeholder="Titre de la tâche" value="{{ miniTask.intitule }}">
                            </div>
                            <div class="form-group">
                                <h4>Deadline</h4>
                                <input class="form-control disabled deadline" disabled="disabled" type="text" name="deadline1" value="{{ miniTask.dead_line }}">
                            </div>
                            <div class="form-group">
                                <h4>Commentaire</h4>
                                <textarea class="form-control disabled" disabled="disabled" name="comments1" placeholder="Plus d'information sur la tâche">{{ miniTask.commentaire }}</textarea>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            {% endfor %}
        {% endblock %}
        <div class="mini-task">
        </div>

    </div>

    <div class="modal-footer">
        <input class="btn btn-success" type="submit" value="{% block button %}{% endblock %}">
        <a class="btn btn-danger" data-dismiss="modal">Close</a>
    </div>

</form>