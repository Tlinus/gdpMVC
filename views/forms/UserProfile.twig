<form method="{% block method %}post{% endblock %}" action="{% block action %}{% endblock %}">
    <div class="modal-footer">

        {# le hidden input nom changable selon le type de user #}
        <input type="hidden" value="{% block hiddenValue %}{% endblock %}" name="{% block hidden %}{% endblock %}">

        {% block buttons %}{% endblock %}
        <a class="btn btn-danger" data-dismiss="modal">Close</a>
    </div>
</form>

