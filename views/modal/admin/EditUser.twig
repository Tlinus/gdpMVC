<div class="modal fade" id="editUser" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Edit User</h3>
            </div>

                {% embed 'forms/UserForm.twig' %}
                    {% block method %}post{% endblock %}
                    {% block hiddenValue %}updateUserAdmin{% endblock %}
                    {% block hidden %}formulaire{% endblock %}
                    {% block button %}Modifier{% endblock %}
                    {% block addInput %}
                        <div class="form-group">
                            <h4>Avatar:</h4>
                            <input class="form-control" type="text" name="avatar" placeholder="Avatar du User">
                        </div>
                    {% endblock %}
                    {% block addButton %}
                        <input class="btn btn-success" type="submit" value="Modifier">
                        <input class="btn btn-warning" type="submit" value="Delete">
                    {% endblock %}
                {% endembed %}

        </div>
    </div>
</div>